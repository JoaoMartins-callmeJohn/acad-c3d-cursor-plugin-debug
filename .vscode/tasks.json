{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AutoCADPlugin.csproj",
                "-c",
                "Debug",
                "-p:Platform=x64"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "clean",
            "command": "dotnet",
            "type": "process",
            "args": [
                "clean",
                "${workspaceFolder}/AutoCADPlugin.csproj",
                "-c",
                "Debug",
                "-p:Platform=x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "rebuild",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/AutoCADPlugin.csproj",
                "-c",
                "Debug",
                "-p:Platform=x64",
                "--no-incremental"
            ],
            "problemMatcher": "$msCompile",
            "dependsOn": "clean"
        }
    ]
}
